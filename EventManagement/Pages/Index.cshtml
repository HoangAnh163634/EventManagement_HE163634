
@page
@model EventManagement.Pages.IndexModel
@{
    ViewData["Title"] = "Event Management";
}

<!-- Hero Section -->
<section class="hero bg-dark text-white py-5" style="background: linear-gradient(to bottom, #1A1A1A, #0F0F0F); position: relative;">
    <div class="container text-center py-5" style="position: relative; z-index: 2;">
        <h1 class="display-4 fw-bold mb-3 hero-text">Plan Your Perfect Event</h1>
        <p class="lead mb-4">Create, manage, and elevate your events with elegance.</p>
        <a href="/Events/Create" class="btn btn-custom-gold btn-lg mx-2">Create Event</a>
        <a href="#events" class="btn btn-outline-light btn-lg mx-2">Explore Events</a>
    </div>
    <div class="parallax-overlay"></div>
</section>

<!-- Latest Events Section -->
<section id="events" class="py-5 bg-black">
    <div class="container">
        <h2 class="text-center mb-4 text-white">Latest Events</h2>
        <div class="row">
            @if (Model.Events.Any())
            {
                @foreach (var evt in Model.Events.Take(3))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-lg bg-dark text-white event-card">
                            <img src="https://picsum.photos/300/200?random=@evt.EventId" class="card-img-top" alt="@evt.EventName">
                            <div class="card-body">
                                <h5 class="card-title">@evt.EventName</h5>
                                <p class="card-text">
                                    <i class="fas fa-calendar-alt me-2 text-gold"></i>
                                    <span class="event-date">@evt.StartDate.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                </p>
                                <p class="card-text">
                                    <i class="fas fa-map-marker-alt me-2 text-gold"></i>@evt.Location
                                </p>
                            </div>
                            <div class="card-footer text-center bg-dark">
                                <a href="/Events/Details/@evt.EventId" class="btn btn-outline-gold">Details</a>
                                <a href="/Registrations/Create?eventId=@evt.EventId" class="btn btn-gold">Register</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-white">No latest events available.</p>
            }
        </div>
    </div>
</section>

<!-- Automate Your Events Section -->
<section class="py-5 bg-dark">
    <div class="container text-center">
        <h2 class="text-white mb-5">Automate Your Events</h2>
        <p class="lead text-muted mb-4">Streamline your event planning with powerful automation.</p>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 bg-gray-dark shadow-lg text-white p-4">
                    <i class="fas fa-paint-brush fa-3x mb-3"></i>
                    <h4>Customize</h4>
                    <p>Tailor invitations and registration to your unique style.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 bg-gray-dark shadow-lg text-white p-4">
                    <i class="fas fa-sliders-h fa-3x mb-3"></i>
                    <h4>Control</h4>
                    <p>Manage events with multi-part RSVPs and custom options.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 bg-gray-dark shadow-lg text-white p-4">
                    <i class="fas fa-robot fa-3x mb-3"></i>
                    <h4>Automate</h4>
                    <p>Simplify planning, communications, and reporting.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Keep the Spotlight Section -->
<section class="py-5 bg-black">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="text-white mb-4">Keep the Spotlight on Your Event and Brand</h2>
                <p class="lead text-muted">Unlike other platforms, we focus on a seamless, branded experience that wows your guests without clutter.</p>
            </div>
            <div class="col-md-6">
                <div class="carousel slide" id="spotlightCarousel" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://picsum.photos/300/200?random=1" class="d-block w-100" alt="Event Spotlight">
                        </div>
                        <div class="carousel-item">
                            <img src="https://picsum.photos/300/200?random=2" class="d-block w-100" alt="Event Spotlight">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#spotlightCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#spotlightCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- The Tools and Features Section -->
<section class="py-5 bg-dark">
    <div class="container text-center">
        <h2 class="text-white mb-5">The Tools and Features You Need</h2>
        <div class="row g-4 tool-grid">
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Send personalized email invitations to your guests.">
                    <i class="fas fa-envelope fa-2x mb-3"></i>
                    <h5>Email Invitations</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Manage online registrations and RSVP responses efficiently.">
                    <i class="fas fa-check-circle fa-2x mb-3"></i>
                    <h5>Online Registration & RSVP</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Collect custom data with flexible fields for your events.">
                    <i class="fas fa-plus fa-2x mb-3"></i>
                    <h5>Custom Data Collection</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Organize and manage your guest lists with ease.">
                    <i class="fas fa-users fa-2x mb-3"></i>
                    <h5>Guest List Management</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Sync events with your calendar for better planning.">
                    <i class="fas fa-calendar-alt fa-2x mb-3"></i>
                    <h5>Calendar Sync</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Use QR codes for fast and secure check-in.">
                    <i class="fas fa-qrcode fa-2x mb-3"></i>
                    <h5>QR Check-in</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Ensure event privacy with advanced security settings.">
                    <i class="fas fa-lock fa-2x mb-3"></i>
                    <h5>Event Privacy</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Receive real-time notifications for event updates.">
                    <i class="fas fa-bell fa-2x mb-3"></i>
                    <h5>Notifications</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 bg-gray-light shadow-lg p-4 tool-card" data-content="Generate detailed feedback reports from attendees.">
                    <i class="fas fa-chart-pie fa-2x mb-3"></i>
                    <h5>Feedback Reports</h5>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- User Reviews Section -->
<section class="py-5 bg-black">
    <div class="container">
        <h2 class="text-center mb-5 text-white">User Reviews</h2>
        <div class="carousel slide" id="reviewCarousel" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row justify-content-center">
                        <div class="col-md-5 mb-4 me-3">
                            <div class="card bg-dark text-white shadow-lg p-4 review-card">
                                <div class="d-flex align-items-center">
                                    <img src="https://picsum.photos/50/50?random=1" class="rounded-circle me-3" alt="Reviewer">
                                    <div>
                                        <p class="card-text">"RSVPify saved me the hassle of chasing people down to confirm attendance. It simplified connecting with employees and importing contact info."</p>
                                        <h6 class="card-subtitle mb-2 text-gold">- Ashley N.</h6>
                                        <p class="text-muted">HR Specialist</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5 mb-4">
                            <div class="card bg-dark text-white shadow-lg p-4 review-card">
                                <div class="d-flex align-items-center">
                                    <img src="https://picsum.photos/50/50?random=2" class="rounded-circle me-3" alt="Reviewer">
                                    <div>
                                        <p class="card-text">"Used RSVPify for our Christmas Party. Due to COVID, we did a 'Pop-up' picnic with food and alcohol, and the software helped us organize well."</p>
                                        <h6 class="card-subtitle mb-2 text-gold">- Rebecca R.</h6>
                                        <p class="text-muted">Senior Administration Officer</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row justify-content-center">
                        <div class="col-md-5 mb-4 me-3">
                            <div class="card bg-dark text-white shadow-lg p-4 review-card">
                                <div class="d-flex align-items-center">
                                    <img src="https://picsum.photos/50/50?random=3" class="rounded-circle me-3" alt="Reviewer">
                                    <div>
                                        <p class="card-text">"QR check-in and notifications made our event seamless. Highly recommend!"</p>
                                        <h6 class="card-subtitle mb-2 text-gold">- Michael J.</h6>
                                        <p class="text-muted">Event Coordinator</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#reviewCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#reviewCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            </div>
        </div>
    </div>
</section>

<!-- Privacy Section -->
<section class="py-5 bg-black">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4">
                <img src="https://picsum.photos/500/350?random=4" class="img-fluid" alt="Privacy Image">
            </div>
            <div class="col-md-4 mb-4">
                <h2 class="text-white mb-4">Privacy is at our Core</h2>
                <p class="lead text-muted">We ensure your event data and guest information are secure with advanced encryption.</p>
            </div>
        </div>
    </div>
</section>

<!-- Call-to-Action Section -->
<section class="py-5 bg-dark text-center">
    <div class="container">
        <h2 class="text-white mb-4">Ready to Get Started?</h2>
        <a href="/Events/Create" class="btn btn-gold btn-lg">Get Started Now</a>
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}
